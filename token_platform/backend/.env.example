# Backend .env example
# Copy to backend/.env and adjust values for your environment.

# Django
SECRET_KEY=change-me
DEBUG=1
ALLOWED_HOSTS=*

# Database
# Set USE_SQLITE=1 to use local sqlite3 (dev). Leave 0 for Postgres below.
USE_SQLITE=1
POSTGRES_DB=token_db
POSTGRES_USER=token_user
POSTGRES_PASSWORD=token_pass
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis / Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Business envs
VAT_RATE=0.15
PLATFORM_COMMISSION_RATE=0.25
GATEWAY_RATE=0.03
GATEWAY_FIXED=2.00
COINS_PER_ETB=1

# Integrations (set real secrets in production)
CHAPA_SECRET=
CHAPA_PUBLIC=
TELEBIRR_API_KEY=

# URLs
BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Withdrawals & limits
MIN_WITHDRAWAL_ETB=500
MAX_DAILY_WITHDRAWAL_ETB=5000
MAX_MONTHLY_WITHDRAWAL_ETB=50000

# Risk controls
RISK_TOPUPS_WINDOW_MIN=60
RISK_TOPUPS_COUNT=5
RISK_GIFTS_ETB_WINDOW_MIN=60
RISK_GIFTS_ETB_THRESHOLD=10000
RISK_WITHDRAWALS_SAME_DEST_THRESHOLD=3

# DRF throttle (optional)
GIFTS_SEND_RATE=10/min

# KYC Encryption (Fernet 32-byte base64 urlsafe key)
# Generate with Python: from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())
KYC_ENCRYPTION_KEY=

# Sentry (optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
ENVIRONMENT=development
